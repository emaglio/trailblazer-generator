class <%= name %>::<%= action_class %> < Trailblazer::Operation
  class Present < Trailblazer::Operation
    step Model(<%= name %>, :new)
    step Contract::Build( constant: <%= name %>::Contract::Create )
  end

  step Nested( Present )
  step Contract::Validate( key: :<%= underscore_name %> )
  step Contract::Persist( )
end
